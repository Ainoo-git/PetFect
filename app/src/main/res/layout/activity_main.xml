<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Botón para abrir Preferencias -->
    <Button
        android:id="@+id/btnOpenPreferencias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Preferencias"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SECCIÓN PERDIDOS -->
    <LinearLayout
        android:id="@+id/sectionPerdidos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnOpenPreferencias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sección: Perdidos"
            android:textSize="18sp"
            android:textStyle="bold"/>


    </LinearLayout>

    <!-- SECCIÓN ADOPCIONES -->
    <LinearLayout
        android:id="@+id/sectionAdopciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/sectionPerdidos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sección: Adopciones"
            android:textSize="18sp"
            android:textStyle="bold"/>


    </LinearLayout>

    <!-- SECCIÓN VETERINARIAS -->
    <LinearLayout
        android:id="@+id/sectionVeterinarias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/sectionAdopciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sección: Veterinarias"
            android:textSize="18sp"
            android:textStyle="bold"/>


    </LinearLayout>

    <!-- Mensaje si no hay nada seleccionado -->
    <TextView
        android:id="@+id/tvNadaSeleccionado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No has seleccionado ninguna preferencia. Pulsa en Preferencias."
        android:textSize="16sp"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnOpenPreferencias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
